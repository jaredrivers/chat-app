// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String        @id @default(uuid()) @db.Uuid
  email       String        @unique
  firstName   String
  lastName    String
  password    String
  phoneNumber String?
  permissions Permissions[] @default([USER])
  chats       Chat[]
  Messages    Message[]
  added       User[]        @relation("contacts")
  addedBy     User[]        @relation("contacts")
}

model Chat {
  id           String    @id @default(uuid()) @db.Uuid
  messages     Message[]
  participants User[]
}

model Message {
  id         String    @id
  sentBy     User      @relation(fields: [userId], references: [id])
  userId     String    @db.Uuid
  sentAt     DateTime
  receivedAt DateTime?
  content    String
  chat       Chat      @relation(fields: [chatId], references: [id])
  chatId     String    @db.Uuid
}

enum Permissions {
  USER
  ADMIN
}
